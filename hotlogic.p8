		return 49,7,5
	elseif char==")" then
		return 51,7,5
	elseif char=="f" then
		return 1,8,2
	elseif char=="t" then
		return 3,11,3
	elseif char=="v" then
		return 5,9,4
	elseif char==">" then
		return 7,9,4
	elseif char=="#" then
		return 9,9,4
	elseif char=="~" then
		return 11,9,4
	elseif char=="&" then
		return 13,9,4
	end
end

